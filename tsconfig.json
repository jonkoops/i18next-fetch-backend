{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": { "i18next-http-backend": ["./lib/index.d.ts"] },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./lib/**/*", "./test/**/*"],
  "exclude": []
}
